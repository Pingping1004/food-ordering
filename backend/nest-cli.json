{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "deleteOutDir": true
  },
  "sourceRoot": "src",
  "monorepo": true,
  "projects": {
    "backend": {
      "sourceRoot": "src",
      "type": "application",
      "root": "apps/backend",
      "entryFile": "main"
    }
  }
}
